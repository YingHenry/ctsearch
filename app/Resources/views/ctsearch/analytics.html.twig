{% extends 'ctsearch/base.html.twig' %}


{%block main_content%}
  <form id="stat-form" class="clearfix">
    <div class="form-item">
      <label for="">{{ "Stat"|trans() }}</label>
      <select id="stat-choice">
        {% for class, choice in statChoices %}
        <option value="{{ class }}">{{ choice }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="form-item">
      <label for="">{{ "From"|trans() }}</label>
      <input type="date" id="date-from" placeholder="Format YYYY-MM-DD" />
    </div>
    <div class="form-item">
      <label for="">{{ "To"|trans() }}</label>
      <input type="date" id="date-to" placeholder="Format YYYY-MM-DD" />
    </div>
    <div class="form-item">
      <label for="">{{ "Granularity"|trans() }}</label>
      <select id="granularity">
        <option value="">Default</option>
        <option value="1">Minute</option>
        <option value="2">Hour</option>
        <option value="3">Day</option>
        <option value="4">Week</option>
        <option value="5">Month</option>
        <option value="6">Year</option>
      </select>
    </div>
    <div class="actions">
      <input type="submit" value="Display stats" />
    </div>
  </form>
  <div id="stat-display">

  </div>
  <div id="table-stat-display">

  </div>
{%endblock%}